{
    "name": "express-clash-images-voting",
    "version": "1.0.0",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "start": "node ./dist/server.js",
        "server": "nodemon ./dist/server.js",
        "dev": "concurrently \"npm run watch\" \"npm run server\" \"npm run watch-views\"",
        "watch": "tsc -w",
        "build": "tsc && npm run copy-files",
        "copy-files": "copyfiles -u 1 \"./src/views/**/*\" dist/",
        "watch-views": "nodemon --watch src/views -e ejs -x \"npm run copy-files\""
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "description": "",
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "concurrently": "^9.0.1",
        "copyfiles": "^2.4.1",
        "nodemon": "^3.1.4",
        "prisma": "^5.19.1",
        "typescript": "^5.6.2"
    },
    "dependencies": {
        "@prisma/client": "^5.19.1",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "ejs": "^3.1.10",
        "express": "^4.21.0",
        "helmet": "^7.1.0",
        "nodemailer": "^6.9.15"
    }
}
